<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@android:color/transparent"
    android:orientation="vertical">

    <FrameLayout
        android:id="@+id/tutor_profile_card_fl"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="35dp">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/civ_tutor_profile_photo"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_gravity="center"
            android:src="@drawable/profile_pic" />

    </FrameLayout>

    <TextView
        android:id="@+id/tv_tutor_name_profile"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tutor_profile_card_fl"
        android:gravity="center"
        android:text="John Doe"
        android:textAppearance="@style/Base.TextAppearance.AppCompat.Large"
        android:textColor="@color/color_white"
        android:textStyle="bold" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_tutor_name_profile"
        android:padding="15dp">

        <TextView
            android:id="@+id/tv_tutor_rate_profile"
            android:layout_width="@dimen/no_size"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:drawableLeft="@drawable/star_pressed"
            android:gravity="center_horizontal|end"
            android:text="4.8"
            android:paddingLeft="80dp"
            android:paddingRight="80dp"
            android:textColor="@color/color_white"
            android:textStyle="bold" />


        <View
            android:layout_width="1dp"
            android:layout_height="20dp"
            android:layout_gravity="center_horizontal"
            android:background="@color/color_white" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/tv_tutor_hours_profile"
                android:layout_width="@dimen/no_size"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center_horizontal|end"
                android:text="10"
                android:textColor="@color/color_white" />

            <TextView
                android:layout_width="@dimen/no_size"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center_horizontal|start"
                android:text=" Hours"
                android:textColor="@color/color_white"
                android:textStyle="bold" />
        </LinearLayout>


    </LinearLayout>

</RelativeLayout>