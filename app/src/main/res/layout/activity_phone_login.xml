<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient_blue_vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="@dimen/margin_login">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:orientation="horizontal">

            <Spinner
                android:id="@+id/spinner_login_country"
                android:layout_width="@dimen/no_size"
                android:layout_height="match_parent"
                android:layout_weight="1" />

            <EditText
                android:id="@+id/et_login_phone_number"
                android:layout_width="@dimen/no_size"
                android:layout_height="match_parent"
                android:layout_weight="4"
                android:hint="@string/enter_phone_number"
                android:inputType="number"
                android:maxLength="10" />

        </LinearLayout>

        <Button
            android:id="@+id/btn_login_continue"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerInParent="true"
            android:text="@string/continue_string" />

    </RelativeLayout>

</FrameLayout>