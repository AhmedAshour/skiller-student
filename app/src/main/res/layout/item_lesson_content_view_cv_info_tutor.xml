<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/item_lesson_content_view_cv_info_tutor"
    android:layout_width="match_parent"
    android:layout_height="@dimen/item_title_view_height"
    app:cardCornerRadius="@dimen/roundness_card">

    <RelativeLayout
        android:id="@+id/item_lesson_content_view_cv_info_tutor_rl"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_margin="@dimen/margin_small">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/item_lesson_content_view_cv_info_tutor_iv_photo"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:layout_margin="2dp"
            android:elevation="2dp"
            android:scaleType="centerCrop"
            android:src="@drawable/profile_pic" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginStart="@dimen/margin_small"
            android:layout_toEndOf="@+id/item_lesson_content_view_cv_info_tutor_iv_photo"
            android:orientation="vertical">

            <TextView
                android:id="@+id/item_lesson_content_view_cv_info_tutor_tv_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/margin_extra_small"
                android:layout_weight="1"
                android:text="Tutor's Name"
                android:textColor="@color/text_header"
                android:textSize="@dimen/text_size_large"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/item_lesson_content_view_cv_info_tutor_tv_rate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/margin_extra_small"
                android:layout_weight="1"
                android:drawablePadding="@dimen/margin_small"
                android:drawableStart="@drawable/ic_small_yellow_star"
                android:text="Tutor's Rating"
                android:textSize="@dimen/text_size_medium" />

        </LinearLayout>

        <ImageButton
            android:id="@+id/item_lesson_content_view_cv_info_tutor_img_btn_enter_profile"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_marginEnd="15dp"
            android:adjustViewBounds="true"
            android:background="@android:color/transparent"
            android:contentDescription=""
            android:scaleType="fitCenter"
            android:src="@drawable/ic_navigation_black_next" />

    </RelativeLayout>

</androidx.cardview.widget.CardView>