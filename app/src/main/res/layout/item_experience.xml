<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:layout_width="10dp"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <View
            android:id="@+id/item_experience_start_line"
            android:layout_width="2dp"
            android:layout_height="6dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="4dp"
            android:background="#424242" />

        <View
            android:id="@+id/item_experience_dot"
            android:layout_width="10dp"
            android:layout_height="10dp"
            android:layout_below="@+id/item_experience_start_line"
            android:background="@drawable/circle_grey" />

        <View
            android:id="@+id/item_experience_end_line"
            android:layout_width="2dp"
            android:layout_height="match_parent"
            android:layout_alignParentLeft="true"
            android:layout_below="@+id/item_experience_dot"
            android:layout_marginLeft="4dp"
            android:background="#424242" />

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="@dimen/no_size"
        android:layout_height="wrap_content"
        android:layout_marginBottom="15dp"
        android:layout_marginLeft="10dp"
        android:layout_weight="3">

        <TextView
            android:id="@+id/item_experience_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Programming Instructor"
            android:textColor="@color/text_body"
            android:textSize="@dimen/text_size_small"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/item_experience_description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/item_experience_title"
            android:text="Teaching programming and computational thinking to students of ages 12 to 18."
            android:textColor="@color/text_body"
            android:textSize="@dimen/text_size_small" />

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="@dimen/no_size"
        android:layout_height="match_parent"
        android:layout_marginBottom="15dp"
        android:layout_weight="1"
        android:minHeight="50dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/item_experience_start_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentTop="true"
            android:text="17 Nov. 2017"
            android:textColor="@color/text_primary"
            android:textSize="@dimen/text_size_small" />

        <TextView
            android:id="@+id/item_experience_end_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentEnd="true"
            android:text="24 Dec. 2018"
            android:textColor="@color/text_primary"
            android:textSize="@dimen/text_size_small" />

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="10dp"
        android:layout_height="match_parent"
        android:layout_marginBottom="15dp"
        android:layout_marginStart="8dp"
        android:minHeight="50dp">

        <View
            android:id="@+id/item_experience_start_date_dot"
            android:layout_width="10dp"
            android:layout_height="10dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentTop="true"
            android:layout_marginTop="8dp"
            android:background="@drawable/circle_blue" />

        <View
            android:id="@+id/item_experience_date"
            android:layout_width="2dp"
            android:layout_height="match_parent"
            android:layout_above="@id/item_experience_end_date_dot"
            android:layout_alignParentEnd="true"
            android:layout_below="@+id/item_experience_start_date_dot"
            android:layout_marginEnd="4dp"
            android:background="#3FBDDE" />

        <View
            android:id="@+id/item_experience_end_date_dot"
            android:layout_width="10dp"
            android:layout_height="10dp"
            android:layout_alignParentBottom="true"
            android:layout_alignParentEnd="true"
            android:layout_marginBottom="4dp"
            android:background="@drawable/circle_blue" />

    </RelativeLayout>

</LinearLayout>