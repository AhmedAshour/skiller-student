<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/item_cv_notes"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardCornerRadius="@dimen/roundness_card">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_gravity="center_vertical"
        android:layout_margin="@dimen/margin_small"
        android:layout_marginStart="@dimen/margin_small"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/margin_extra_small"
            android:text="review"
            android:textAllCaps="true"
            android:textColor="@color/text_header"
            android:textSize="@dimen/text_size_medium"
            android:textStyle="bold" />

        <RatingBar
            android:id="@+id/item_lesson_content_view_cv_review_rating_bar"
            style="?android:attr/ratingBarStyleIndicator"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:clickable="false"
            android:focusable="false"
            android:focusableInTouchMode="false"
            android:numStars="5"
            android:progressTint="#ED8A19"
            android:rating="3.3"
            android:scaleX=".7"
            android:scaleY=".7" />

        <TextView
            android:id="@+id/item_lesson_content_view_cv_review_tv_review"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="No written review added"
            android:textSize="@dimen/text_size_small" />

    </LinearLayout>

</android.support.v7.widget.CardView>